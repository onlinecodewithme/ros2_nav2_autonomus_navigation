<?xml version="1.0" ?>
<sdf version="1.8">
  <model name="tracked_robot">
    <static>false</static>
    
    <!-- Base Link -->
    <link name="base_link">
      <inertial>
        <mass>15.0</mass>
        <inertia>
          <ixx>0.3</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.5</iyy>
          <iyz>0</iyz>
          <izz>0.7</izz>
        </inertia>
        <pose>0 0 0.1 0 0 0</pose>
      </inertial>
      
      <collision name="base_collision">
        <pose>0 0 0.1 0 0 0</pose>
        <geometry>
          <box>
            <size>0.6 0.4 0.2</size>
          </box>
        </geometry>
      </collision>
      
      <visual name="base_visual">
        <pose>0 0 0.1 0 0 0</pose>
        <geometry>
          <box>
            <size>0.6 0.4 0.2</size>
          </box>
        </geometry>
        <material>
          <ambient>0.5 0.5 0.5 1</ambient>
          <diffuse>0.5 0.5 0.5 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>
      
      <!-- Top Platform (for aesthetics) -->
      <visual name="top_platform_visual">
        <pose>0 0 0.21 0 0 0</pose>
        <geometry>
          <box>
            <size>0.55 0.35 0.02</size>
          </box>
        </geometry>
        <material>
          <ambient>0.3 0.3 0.3 1</ambient>
          <diffuse>0.3 0.3 0.3 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>
      
      <!-- Control Panel -->
      <visual name="control_panel_visual">
        <pose>0.22 0 0.25 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.2 0.06</size>
          </box>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>
    </link>
    
    <!-- Left Track -->
    <link name="left_track">
      <pose>0 0.25 0.05 0 0 0</pose>
      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.1</iyy>
          <iyz>0</iyz>
          <izz>0.1</izz>
        </inertia>
      </inertial>
      
      <collision name="left_track_collision">
        <geometry>
          <box>
            <size>0.6 0.1 0.1</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.9</mu>
              <mu2>0.9</mu2>
              <fdir1>1 0 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
      
      <visual name="left_track_visual">
        <geometry>
          <box>
            <size>0.6 0.1 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>
    </link>
    
    <!-- Right Track -->
    <link name="right_track">
      <pose>0 -0.25 0.05 0 0 0</pose>
      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.1</iyy>
          <iyz>0</iyz>
          <izz>0.1</izz>
        </inertia>
      </inertial>
      
      <collision name="right_track_collision">
        <geometry>
          <box>
            <size>0.6 0.1 0.1</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.9</mu>
              <mu2>0.9</mu2>
              <fdir1>1 0 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
      
      <visual name="right_track_visual">
        <geometry>
          <box>
            <size>0.6 0.1 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>
    </link>
    
    <!-- ZED 2i Camera -->
    <link name="zed2i_link">
      <pose>0.25 0 0.25 0 0 0</pose>
      <inertial>
        <mass>0.159</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.0001</iyy>
          <iyz>0</iyz>
          <izz>0.0001</izz>
        </inertia>
      </inertial>
      
      <collision name="zed2i_collision">
        <geometry>
          <box>
            <size>0.175 0.03 0.033</size>
          </box>
        </geometry>
      </collision>
      
      <visual name="zed2i_visual">
        <geometry>
          <box>
            <size>0.175 0.03 0.033</size>
          </box>
        </geometry>
        <material>
          <ambient>0.3 0.3 0.3 1</ambient>
          <diffuse>0.3 0.3 0.3 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>
      
      <sensor name="zed2i_camera" type="camera">
        <camera>
          <horizontal_fov>1.91986</horizontal_fov>
          <image>
            <width>1920</width>
            <height>1080</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.02</near>
            <far>300</far>
          </clip>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.007</stddev>
          </noise>
        </camera>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <topic>zed2i/rgb</topic>
      </sensor>
    </link>
    
    <!-- Left Track Joint -->
    <joint name="left_track_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_track</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-10000000000000000</lower>
          <upper>10000000000000000</upper>
        </limit>
      </axis>
    </joint>
    
    <!-- Right Track Joint -->
    <joint name="right_track_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_track</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-10000000000000000</lower>
          <upper>10000000000000000</upper>
        </limit>
      </axis>
    </joint>
    
    <!-- ZED 2i Camera Joint -->
    <joint name="zed2i_joint" type="fixed">
      <parent>base_link</parent>
      <child>zed2i_link</child>
    </joint>
    
    <!-- Differential Drive Plugin -->
    <plugin
      filename="libign_gazebo_diff_drive.so"
      name="gz::sim::systems::DiffDrive">
      <left_joint>left_track_joint</left_joint>
      <right_joint>right_track_joint</right_joint>
      <wheel_separation>0.5</wheel_separation>
      <wheel_radius>0.1</wheel_radius>
      <topic>/tracked_robot/cmd_vel</topic>
      <odom_topic>/tracked_robot/odom</odom_topic>
      <odom_publish_frequency>30</odom_publish_frequency>
      <max_linear_acceleration>1.0</max_linear_acceleration>
      <min_linear_acceleration>-1.0</min_linear_acceleration>
      <max_angular_acceleration>2.0</max_angular_acceleration>
      <min_angular_acceleration>-2.0</min_angular_acceleration>
      <max_linear_velocity>1.0</max_linear_velocity>
      <min_linear_velocity>-1.0</min_linear_velocity>
      <max_angular_velocity>1.0</max_angular_velocity>
      <min_angular_velocity>-1.0</min_angular_velocity>
    </plugin>
  </model>
</sdf>
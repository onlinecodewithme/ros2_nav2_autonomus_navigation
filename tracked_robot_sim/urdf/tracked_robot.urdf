<?xml version="1.0"?>
<robot name="tracked_robot">
  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <mass value="15.0"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <inertia ixx="0.3" ixy="0.0" ixz="0.0" iyy="0.5" iyz="0.0" izz="0.7"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.6 0.4 0.2"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.6 0.4 0.2"/>
      </geometry>
    </collision>
  </link>

  <!-- Left Track Link -->
  <link name="left_track">
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0.25 0" rpy="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="0 0.25 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.6 0.1 0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0.25 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.6 0.1 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Right Track Link -->
  <link name="right_track">
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 -0.25 0" rpy="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="0 -0.25 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.6 0.1 0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 -0.25 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.6 0.1 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Left Track Joint -->
  <joint name="left_track_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_track"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Right Track Joint -->
  <joint name="right_track_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_track"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ZED 2i Camera Link -->
  <link name="zed2i_link">
    <inertial>
      <mass value="0.159"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.175 0.03 0.033"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.175 0.03 0.033"/>
      </geometry>
    </collision>
  </link>

  <!-- ZED 2i Camera Joint -->
  <joint name="zed2i_joint" type="fixed">
    <parent link="base_link"/>
    <child link="zed2i_link"/>
    <origin xyz="0.25 0 0.25" rpy="0 0 0"/>
  </joint>

  <!-- ZED 2i Camera Optical Frame -->
  <link name="zed2i_left_camera_optical_frame"/>

  <joint name="zed2i_left_camera_optical_joint" type="fixed">
    <parent link="zed2i_link"/>
    <child link="zed2i_left_camera_optical_frame"/>
    <origin xyz="0 0.06 0" rpy="-1.5707963267948966 0 -1.5707963267948966"/>
  </joint>

  <!-- Gazebo plugins -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/tracked_robot</robotNamespace>
    </plugin>
  </gazebo>

  <!-- Tracks -->
  <gazebo reference="left_track">
    <mu1>0.9</mu1>
    <mu2>0.9</mu2>
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="right_track">
    <mu1>0.9</mu1>
    <mu2>0.9</mu2>
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- ZED 2i Camera Plugin -->
  <gazebo reference="zed2i_link">
    <sensor type="camera" name="zed2i_camera">
      <update_rate>30.0</update_rate>
      <camera name="zed2i">
        <horizontal_fov>1.91986</horizontal_fov>
        <image>
          <width>1920</width>
          <height>1080</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>30.0</updateRate>
        <cameraName>zed2i</cameraName>
        <imageTopicName>rgb/image_raw</imageTopicName>
        <cameraInfoTopicName>rgb/camera_info</cameraInfoTopicName>
        <frameName>zed2i_left_camera_optical_frame</frameName>
        <hackBaseline>0.12</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Differential drive controller for tracks -->
  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <robotNamespace>/tracked_robot</robotNamespace>
      <alwaysOn>true</alwaysOn>
      <updateRate>50</updateRate>
      <leftJoint>left_track_joint</leftJoint>
      <rightJoint>right_track_joint</rightJoint>
      <wheelSeparation>0.5</wheelSeparation>
      <wheelDiameter>0.2</wheelDiameter>
      <torque>20</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link</robotBaseFrame>
      <publishWheelTF>false</publishWheelTF>
      <publishOdomTF>true</publishOdomTF>
      <publishWheelJointState>true</publishWheelJointState>
      <legacyMode>false</legacyMode>
      <odometrySource>world</odometrySource>
      <publishTf>true</publishTf>
    </plugin>
  </gazebo>
</robot>